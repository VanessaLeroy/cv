\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{letterstyleclassic}[2017/07/12 v1.1 cover letter style scheme: classic]

%----------------------------------------------------------
% COVER LETTER DESIGN
%----------------------------------------------------------
% commands
%-------
\renewcommand*{\makelettertitle}{%
	\phantomsection
  \addcontentsline{toc}{chapter}{Lettre de motivation}%
  % regular lengths
  \setlength{\parskip}{1em}
  % sender contact info
  \hfill%
  \begin{minipage}{.5\textwidth}%
    \raggedleft%
		\contactstyle\@sendercontact
	\end{minipage}\\[1em]
  % recipient block
  \begin{minipage}[t]{.5\textwidth}
		\contactstyle\@recipientcontact
  \end{minipage}
  % date
  \hfill% US style
  \@senderdate\\[2em]
  % opening
  \raggedright%
  \@opening\\[1.5em]%
  % ensure no extra spacing after \makelettertitle due to a possible blank line
  \hspace{0pt}\par\vspace{-\baselineskip}\vspace{-\parskip}
}


\renewcommand*{\lettertext}[2][\parskip]{%
    \ifx&#2&%
      \else{\makenewline\begin{minipage}[t]{\linewidth}#2\end{minipage}}\fi\\[#1]%
}%

\renewcommand*{\makelettercontents}{
  \@closing\\[3em]%
  {\bfseries\@name}%
  \ifthenelse{\isundefined{\@attached}}{}{%
    \\%
    \vfill%
    {\color{color2}\itshape\enclname: \@attached}
	}
}

\endinput

